<Window x:Class="TwitchChatBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchChatBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" WindowState="Maximized" Cursor="None" Topmost="True">
    <Grid>
        <TextBox 
            Name="tbSettingText"
            TextWrapping="Wrap"
            AcceptsReturn="True" Margin="120,130,120,126"
            Background="Transparent" FontSize="24" IsReadOnly="True" Foreground="White" TextAlignment="Center" BorderThickness="0"
        >
            Initial text contents of the TextBox.
        </TextBox>
    </Grid>
</Window>
